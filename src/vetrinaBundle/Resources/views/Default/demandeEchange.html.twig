
{% block body %}
    
        
  <section id="cart_items">
		<div class="container">
				<div class="row">
					<div class="col-sm-9">
	
	
	     
	<div class="review-payment">
           
				<h2>Demandes d'echange</h2>
			</div>
                                         
                                        
			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">vetement</td>
						<td></td>
						<td>Client </td>
							<td class="price"></td>
                                                        <td>Echanger avec</td>
							<td class="total">Choix</td>
							<td></td>
						</tr>
					</thead>
                                        {% if demandes|length == 0 %}
                        <tr>
                            <td colspan="5"><center>Aucune demande d'echange</center></td>
                        </tr>
                    {% endif %}
					<tbody>
                                             {% for demande in demandes %} 
                                                 {% if vetement|length != 0 %}
                                                 {%for vet in vetement %}
                                                      {% if demande.echanger== vet.id %}
                                                  {% if demande.vetement.disponibilite== true %}
                                                 
						<tr>
							<td class="cart_product">
								<a href=""><img src="{{asset('uploads/' ~demande.vetement.path)}}" height="75" width="75"></a>
							</td>
							<td class="cart_description">
								<h4><a href="">{{demande.vetement.nomvet}}</a></h4>
								<p>Web ID: {{demande.id}}</p>
							</td>
							<td>
							<h4><a href="">{{demande.client.prenom}} {{demande.client.nom}}</a></h4>
								<p>ID: {{demande.client.id}}</p>
							
							
							</td>
							
								     
							<td class="cart_price">
								<a href=""><img src="{{asset('uploads/' ~vet.path)}}" height="75" width="75"></a>
							</td>
                                                       
							<td class="cart_total">
								<h4><a href="">{{ vet.nomvet }}</a></h4>
								<p>Web ID: {{ vet.id }} </p>
							</td>
							
						
                                                        <td>	
			<a href="{{path('etatdemandeech',{'id':demande.id ,'vid':vet.id ,'etat': 'valide' }) }}" class="btn btn-info">Confirmer </a>
			
			<a href="{{path('etatdemandeech',{'id':demande.id ,'vid':vet.id ,'etat': 'echec'})}}"class="btn btn-danger">Supprimer</a>
			
							</td>
							
						</tr>
						
						
						
						
						
						
						
						
						
						
						
						

						
						<tr>
							<td colspan="4">&nbsp;</td>
							<td colspan="2">
								<table class="table table-condensed total-result">
									
									
								</table>
							</td>
						</tr>
					 
                                                  
                                              {% endif %}{% endif %}
                                                 {% endfor %}{% endif %}    
                                             {% endfor %}</tbody>
				</table>
					</div>
			
	</div>
					
				</div>
			</div></section>
	
          
    
    
    
  
{% endblock %}