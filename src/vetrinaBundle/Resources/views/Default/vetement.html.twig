
<div class="col-sm-9 padding-right">
					<div class="blog-post-area">
						<h2 class="title text-center">Mes vetements</h2>
						<a href="{{path('ajout')}}" class="btn btn-default">Ajouter un vetement</a>
						<br/><br/>
    {% if vetement|length == 0 %}
    <div class="well text-center">
	<h4>Aucun vetement</h4>
	</div>
           {% endif %}
           {% for categorie in vetement %}
              
    <div class="col-sm-3">
    <div class="product-image-wrapper">
     <div class="single-products">
     <div class="productinfo text-center">
     <img src="{{asset('uploads/' ~categorie.path)}}" width="300" height="200" />
     <p><b> {{categorie.nomvet}}</b></p>
     <h3>Prix d'achat:</h3>
     <h2>{{categorie.prix}} €</h2>
     <h3>Prix de location:</h3>   
      <h2>{{categorie.prixloc}} €</h2>
     <p> {{categorie.marque}}</p>
     
        <a href="#" class="btn btn-default add-to-cart">Modifier </a>
        <a href="#" class="btn btn-default add-to-cart ">Supprimer</a>
      </div>
      <div class="product-overlay">
      <div class="overlay-content">
           <p><b> {{categorie.nomvet}}</b></p>
            <p> {{categorie.description}}</p>
                
            
        
            
        <a href="{{path('editvet',{'id':categorie.id})}}" class="btn btn-default add-to-cart">Modifier </a>
        <a href="{{path('supprimervet',{'id':categorie.id})}}" class="btn btn-default add-to-cart">Supprimer</a>
       <br/>
        <a href="{{path('details',{'id':categorie.id})}}" class="btn btn-info ">Plus de details</a>
        <br/>
       </div>
         </div>
    </div>

   </div>
  </div>
    
    
    
    
   
     
       
    {% endfor %}

           
            
                                                
          </div>
	</div>