{% extends 'vetrinaBundle:Default:layout.html.twig' %}
{% block title %}
    <title>Vetrina | Contact</title>
{% endblock %}
{% block body %}
 <div id="contact-page" class="container">
    <div class="bg">
	<div class="row">    		
	    <div class="col-sm-12">    			   			
		<h2 class="title text-center"><strong> Contact </strong></h2>    			    				    				
					
	     </div>			 		
		</div>    	
    	<div class="row">  	
	    <div class="col-sm-8">
	    	<div class="contact-form">
	      <h2 class="title text-center">Nous contactez</h2>
	    	<div class="status alert alert-success" style="display: none"></div>
				    	 <form action="{{ path('vetrina_contact') }}" id="main-contact-form" class="contact-form row" name="contact-form" method="post">
				            <div class="form-group col-md-6">
				               
                                                {{ form_widget(form.Nom) }} 
				            </div>
				                 <div class="form-group col-md-6">
				               
                                                {{ form_widget(form.email) }} 
				            </div> 
                                             <div class="form-group col-md-12">
				               
                                                {{ form_widget(form.Object) }} 
				            </div>
                                             <div class="form-group col-md-12">
				               
                                                {{ form_widget(form.Description, { 'attr': { 'rows' : '8'}}) }} 
				            </div>
				            <div class="form-group col-md-12">
				                <input type="submit" name="submit" class="btn btn-primary pull-right" value="Envoyer">
				            </div>
				        </form>
	    			</div>
	    		</div>
	    		<div class="col-sm-4">
	    			<div class="contact-info">
	    				<h2 class="title text-center">Informations sur Vetrina</h2>
	    				<address>
	    					<p>Vetrina Inc.</p>
							<p>44 Rue Burdeau , Lyon</p>
							<p>France</p>
							<p>Mobile: 06 28 92 02 01</p>
							
							<p>Email: bensalha.salah@gmail.com</p>
	    				</address>
	    				
	    			</div>
    			</div>    			
	    	</div>  
    	</div>	
    </div><!--/#contact-page-->
	   
    
    <br/><br/>
{% endblock %}