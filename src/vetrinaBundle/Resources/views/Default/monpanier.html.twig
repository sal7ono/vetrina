{% extends 'vetrinaBundle:Default:layout.html.twig' %}
{% block title %}
    <title>Vetrina | Panier </title>
{% endblock %}
{% block body %}
    {% set total = 0 %}


    <section id="cart_items">
		<div class="container">
				<div class="row">
					<div class="col-sm-9">
	
	 {% for flashMessage in app.session.flashbag.get('Erreur') %}
                <div class="alert alert-error">
                    {{ flashMessage }}
                </div>
            {% endfor %}
	 
	<div class="review-payment">
				<h2>Panier d'achat</h2>
			</div>

			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">vetement</td>
						<td></td>
							<td class="price">Prix d'achat</td>
							
							<td class="total">Total avec Tva</td>
							<td>etat</td>
						</tr>
					</thead>
                                                 {% if paniers|length == 0 %}
                        <tr>
                            <td colspan="5"><center>Aucun vetement dans votre panier</center></td>
                        </tr>
                    {% endif %} 
                        
                   
                                        {% for produit in paniers %}
                                            {% if produit.vetement.disponibilite== true %}
					<tbody>
						<tr>
							<td class="cart_product">
								<a href=""><img src="{{asset('uploads/' ~produit.vetement.path)}}" height="75" width="75"></a>
							</td>
							<td class="cart_description">
								<h4><a href="">{{ produit.vetement.nomvet }}</a></h4>
								<p>Web ID: {{ produit.vetement.id }} </p>
							</td>
							<td class="cart_price">
								<p>{{ produit.vetement.prix }} €</p>
							</td>
							
							<td class="cart_total">
								<p class="cart_total_price">{{ produit.vetement.prix|tva }} DT</p>
							</td>
                                                        
						
                                                        {% if produit.etat== 'valide' %}
                                                            <td><img src="{{asset('images/ok.jpg')}}" height="50" weigth="50"/>
                                               <a class="btn btn-info" href="{{path('ValidePanier',{'id':produit.id  }) }}">Finaliser ma commande</a>
                                                              </td>
                                                            
                                                             {% elseif produit.etat== 'echec' %}
                                                                 <td><img src="{{asset('images/erreur.jpg')}}"  height="50" weigth="50"/>
                                                                     <font color="red"> Echec </font>  </td>
                                                                 {% elseif produit.etat== null %}
                                                                     <td><img src="{{asset('images/attente.jpg')}}" height="50" weigth="50"/>En Attente  </td>
                                                               {% endif %}
                                                            </tr>   
                                                             {% if produit.etat != 'echec' %}
                                                {% set total = total + produit.vetement.prix|tva %}
                                                  {% endif %}
                                                  {% endif %}
                                              {% endfor %}
						
						<tr>
                                              
							<td colspan="4">&nbsp;</td>
							<td colspan="2">
								<table class="table table-condensed total-result">
									 {% if paniers|length != 0 %}
									<tr>
										<td><span>Total:</span></td>
										<td>{{total}} €</td>
									</tr>
                                                                        {% endif%}
								</table>
							</td>
						</tr>
					</tbody>
				</table>
</div>
	
         
	</div>
					
				</div>
			</div></section>
                         
                             {% render(controller('vetrinaBundle:Demande:monpanierloc')) %}
                             {% render(controller('vetrinaBundle:Demande:monpanierech')) %}
                        <br/> <br/> <br/> <br/> <br/> <br/>
    {% endblock %}